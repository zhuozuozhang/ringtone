<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hrtxn.ringtone.project.system.notice.mapper.NoticeMapper">

    <resultMap id="BaseResultMap" type="com.hrtxn.ringtone.project.system.notice.domain.Notice">
        <id column="notice_id" property="noticeId" jdbcType="INTEGER" />
        <result column="notice_title" property="noticeTitle" jdbcType="VARCHAR" />
        <result column="notice_weight" property="noticeWeight" jdbcType="INTEGER" />
        <result column="notice_status" property="noticeStatus" jdbcType="INTEGER" />
        <result column="notice_module" property="noticeModule" jdbcType="VARCHAR" />
        <result column="notice_time" property="noticeTime" jdbcType="TIMESTAMP" />
        <result column="notice_author" property="noticeAuthor" jdbcType="VARCHAR" />
        <result column="notice_content" property="noticeContent" jdbcType="LONGVARCHAR" />
    </resultMap>

    <sql id="Base_Column_List">
          notice_id, notice_title, notice_weight, notice_status, notice_module, notice_time,
          notice_author,notice_content
    </sql>
    <!-- 获取所有公告列表 -->
    <select id="findAllNoticeList" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            sys_notice
        ORDER BY notice_time DESC
        LIMIT #{page.page},#{page.pagesize}
    </select>
    <!--获取公告总数-->
    <select id="getNoticeCount" resultType="int">
        SELECT COUNT(*) FROM sys_notice;
    </select>
    <!-- 根据ID查询公告信息 -->
    <select id="findNoticeById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            sys_notice
        WHERE
            notice_id = #{id,jdbcType=INTEGER}
    </select>
    <!-- 删除公告信息 -->
    <delete id="deleteNotice" parameterType="java.lang.Integer">
        DELETE FROM
            sys_notice
        WHERE
            notice_id = #{id,jdbcType=INTEGER}
    </delete>
    <!-- 添加公告信息 -->
    <insert id="insertNotice" parameterType="Notice" >
        insert into sys_notice
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="noticeTitle != null" >
                notice_title,
            </if>
            <if test="noticeWeight != null" >
                notice_weight,
            </if>
            <if test="noticeStatus != null" >
                notice_status,
            </if>
            <if test="noticeModule != null" >
                notice_module,
            </if>
            <if test="noticeTime != null" >
                notice_time,
            </if>
            <if test="noticeAuthor != null" >
                notice_author,
            </if>
            <if test="noticeContent != null" >
                notice_content,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="noticeTitle != null" >
                #{noticeTitle,jdbcType=VARCHAR},
            </if>
            <if test="noticeWeight != null" >
                #{noticeWeight,jdbcType=INTEGER},
            </if>
            <if test="noticeStatus != null" >
                #{noticeStatus,jdbcType=INTEGER},
            </if>
            <if test="noticeModule != null" >
                #{noticeModule,jdbcType=VARCHAR},
            </if>
            <if test="noticeTime != null" >
                #{noticeTime,jdbcType=TIMESTAMP},
            </if>
            <if test="noticeAuthor != null" >
                #{noticeAuthor,jdbcType=VARCHAR},
            </if>
            <if test="noticeContent != null" >
                #{noticeContent,jdbcType=LONGVARCHAR},
            </if>
        </trim>
    </insert>
    <!-- 修改公告信息 -->
    <update id="updateNotice" parameterType="Notice" >
        update sys_notice
        <set >
            <if test="noticeTitle != null" >
                notice_title = #{noticeTitle,jdbcType=VARCHAR},
            </if>
            <if test="noticeWeight != null" >
                notice_weight = #{noticeWeight,jdbcType=INTEGER},
            </if>
            <if test="noticeStatus != null" >
                notice_status = #{noticeStatus,jdbcType=INTEGER},
            </if>
            <if test="noticeModule != null" >
                notice_module = #{noticeModule,jdbcType=VARCHAR},
            </if>
            <if test="noticeTime != null" >
                notice_time = #{noticeTime,jdbcType=TIMESTAMP},
            </if>
            <if test="noticeAuthor != null" >
                notice_author = #{noticeAuthor,jdbcType=VARCHAR},
            </if>
            <if test="noticeContent != null" >
                notice_content = #{noticeContent,jdbcType=LONGVARCHAR},
            </if>
        </set>
        where notice_id = #{noticeId,jdbcType=INTEGER}
    </update>
    <!-- 按照公告类型查询-->
    <select id="findNoticeListByModul" resultMap="BaseResultMap"  parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_notice
        where notice_status = 1
        and notice_module = #{modul,jdbcType=VARCHAR}
        ORDER BY notice_time DESC
    </select>
</mapper>